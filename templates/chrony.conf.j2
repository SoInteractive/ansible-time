# {{ ansible_managed }}

{% for host in time_servers[time_servers_location] %}
server {{ host }} iburst
{% endfor %}

keyfile {{ chrony_keys }}

commandkey 1

driftfile {{ driftfile }}

log tracking measurements statistics
logdir {{ logdir }}

maxupdateskew 200.0

dumponexit

dumpdir {{ dumpdir }}

local stratum 10

{% for network in tiem_sync_networks %}
allow {{ network }}
{% endfor %}

logchange 0.5

rtconutc
